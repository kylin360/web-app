{
    "name": "cross-border-calculator/backend",
    "description": "跨境电商计算器后端API",
    "type": "project",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=7.4",
        "yiisoft/yii2": "~2.0.45",
        "yiisoft/yii2-bootstrap5": "~2.0.2",
        "yiisoft/yii2-swiftmailer": "~2.0.3",
        "yiisoft/yii2-redis": "~2.0.4",
        "yiisoft/yii2-mongodb": "~2.1.8",
        "yiisoft/yii2-queue": "~2.3.0",
        "yiisoft/yii2-httpclient": "~2.0.14",
        "yiisoft/yii2-imagine": "~2.3.0",
        "guzzlehttp/guzzle": "^7.0",
        "monolog/monolog": "^2.0",
        "predis/predis": "^2.0",
        "mongodb/mongodb": "^1.12",
        "league/csv": "^9.0",
        "phpoffice/phpspreadsheet": "^1.24",
        "intervention/image": "^2.7",
        "ramsey/uuid": "^4.6",
        "firebase/php-jwt": "^6.4",
        "lcobucci/jwt": "^4.2",
        "nesbot/carbon": "^2.67"
    },
    "require-dev": {
        "yiisoft/yii2-debug": "~2.1.0",
        "yiisoft/yii2-gii": "~2.2.0",
        "yiisoft/yii2-faker": "~2.0.5",
        "codeception/base": "^4.0",
        "codeception/verify": "~1.1.0",
        "symfony/var-dumper": "^5.4",
        "phpunit/phpunit": "^9.5"
    },
    "config": {
        "allow-plugins": {
            "yiisoft/yii2-composer": true,
            "composer/package-versions-deprecated": true
        },
        "process-timeout": 1800,
        "fxp-asset": {
            "enabled": false
        }
    },
    "autoload": {
        "psr-4": {
            "app\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "yii\\composer\\Installer::postInstall"
        ],
        "post-create-project-cmd": [
            "yii\\composer\\Installer::postCreateProject",
            "yii\\composer\\Installer::postInstall"
        ]
    },
    "extra": {
        "yii\\composer\\Installer::postCreateProject": {
            "setPermission": [
                {
                    "runtime": "0777",
                    "web/assets": "0777",
                    "yii": "0755"
                }
            ]
        },
        "asset-installer-paths": {
            "npm-asset-library": "vendor/npm",
            "bower-asset-library": "vendor/bower"
        }
    }
}
